@Model [GBAB_Blog}.Models.EmailModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h4>Send me a message.</h4>
    <hr />
    @Html.ValidationMessage.Summary("", new { @class = "text-danger" })
    <div class="form_group">
        @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FromName)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(mbox => mbox.FromEmail, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control", placeholder = "example@example.com" })
            @Html.ValidationMessageFor(m => m.FromEmail)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset h2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Send" />
        </div>
    </div>

}


